/* pages/order/order.wxss */

.top {
  height: 80rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}

.top-left-text {
  font-size: 18px;
  color: #333;
  line-height: 80rpx;
  margin-left: 30rpx;
  font-weight: bold;
}

.top-right-text {
  font-size: 12px;
  color: #69b1fc;
  line-height: 80rpx;
  margin-right: 30rpx;
  text-decoration: underline;
}

.middle {
  display: flex;
  margin: 30rpx 0;
}

.middle view {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.middle image {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.middle text {
  text-align: center;
  font-size: 12px;
}

.order_img {
  width: 100%;
  height: 170rpx;
}

.bottom view {
  margin-left: 30rpx;
  border-bottom: 1px solid #ebebed;
  height: 80rpx;
}

.bottom image {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}

.bottom  text {
  margin-left: 20rpx;
  line-height: 50rpx;
  font-size: 13px;
}

.home{
 width: 100%;
}
.content{
  width: 700rpx;
  height: 640rpx;
  border: 1rpx solid #ccc;
  margin: 200rpx auto;
  box-shadow: 3rpx 3rpx 3rpx #d6d6d6;
}

.hader{
height: 130rpx;
line-height: 130rpx;
text-align: center;
padding: 10rpx 0;
border-bottom: 1rpx solid #e5e5e5;
position: relative;
}

.action{
  width: 150rpx;
  height: 30rpx;
  position: absolute;
  top: 50rpx;
  left: 130rpx;
}

.arrow{
  margin: 0 15rpx;
  font-size: 20px;
  color: #4c94ff;
}

.over{
  width: 150rpx;
  height: 30rpx;
  position: absolute; 
  top: 50rpx;
  left: 420rpx; 
}


.date{
  height: 130rpx;
  line-height: 130rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.actiondate{
font-size: 14px;
color: #999999;
margin-left: 40rpx;
margin-right: 40rpx;
}

.month{
  display: inline-block;
  font-size: 14px;
  margin-right: 40rpx;
}

.week{
  font-size: 14px;
  color: #999999;
}

.other{
  font-size: 14px;
  text-align: center;
  display: flex;
  padding: 45rpx 0;
}

.checkbox{
  flex: 1;
  font-size: 12px;
}


.query{
  width: 680rpx;
  background: #3b99fc;
  color: white;
}


.history{
  display: flex;
  color: #999999;
  float: left;
  margin-right: 30rpx;
}

.city{
  flex: 1;
  padding-top: 45rpx;
  text-align: center;
  font-size: 12px;
  position: relative;
}

.eliminate{
  color: #999999;
  font-size: 12px;
  position: absolute;
  top: 777rpx;
}

.swiper{
  display: flex;
  margin-top: -160rpx;
  height: 150rpx;
}

.swiper image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

.swiper .swiper-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  float: left;
  font-size: 12px;
}

.swiper text{
  text-align: center;
}

.fill{
  height: 20rpx;
  background: #efeff4;
}

.swiper_2{
  width: 100%;
  height: 50rpx;
  /* background: red; */
}

.inquiry{
  font-size: 10px;
  color: #ff972e;
  border: 1px solid #ff972e;
  margin-left: 30rpx;
}

.center{
  margin-left: 20rpx;
  color: #999999;
  font-size: 12px;
}